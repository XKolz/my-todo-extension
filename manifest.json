{
    "manifest_version": 3,
    "name": "Todo List Manager",
    "version": "1.0",
    "description": "Manage your daily tasks directly from your browser.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "permissions": [
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }
  